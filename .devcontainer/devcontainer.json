{
  "name": "EDH Hackathon (Conda + Data)",
  
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/conda:1": {
      "version": "latest"
    }
  },

  // === THIS IS THE FIX ===
  // We now call a single, reliable master script.
  "postCreateCommand": ".devcontainer/post-create.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  
  "remoteUser": "vscode"
}
