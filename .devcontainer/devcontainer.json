{
  "name": "EDH Hackathon (Conda + Data)",
  
  "image": "mcr.microsoft.com/devcontainers/python:3.10-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/conda:1": {
      "version": "latest"
    }
  },

  // postCreateCommand runs after the container is created, but before you're connected.
  // It's perfect for setting up environments and downloading data.
  "postCreateCommand": [
    // --- 1. Create the Conda environment from your file ---
    "conda env create -f environment.yml",
    
    // --- 2. Configure the shell to auto-activate the new environment ---
    "echo 'conda activate edh-hackathon-env' >> ~/.bashrc",

    // --- 3. Run the data download script ---
    // This replaces the old blobfuse setup.
    "chmod +x .devcontainer/setup_data.sh",
    ".devcontainer/setup_data.sh"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  
  "remoteUser": "vscode"
}
